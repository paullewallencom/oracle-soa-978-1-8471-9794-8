  <ejb-reference-description>
     <ejb-ref-name>ejb/bpel/services/workflow/TaskServiceBean</ejb-ref-name>
     <jndi-name>ejb/bpel/services/workflow/TaskServiceBean</jndi-name>
  </ejb-reference-description>
  <ejb-reference-description>
